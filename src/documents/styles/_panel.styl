// Panel Get Updates
#panel-updates
    float left
    position fixed
    right 0
    left 0
    z-index 1030
    height 180px
    width 100%
    background-color #333
    z-index 1000
    -moz-box-shadow inset 0 -2px 4px rgba(0,0,0,.3)
    -webkit-box-shadow inset 0 -2px 4px rgba(0,0,0,.3)
    box-shadow inset 0 -2px 4px rgba(0,0,0,.3)

.panel-updates-closed
    top -180px

.panel-updates-opened
    display block
    top 0

#panel-updates-h1
    margin-top 15px

.input-group
    width 100%

.form-control
    -moz-border-radius 4px
    -webkit-border-radius 4px
    border-radius 4px
    min-height 52px

#input-email
    width 100%
    
#input-zip
    width 100%

#btn-updates-submit,
#mc-embedded-subscribe
    width 100%
    height 52px
    -moz-border-radius 4px
    -webkit-border-radius 4px
    border-radius 4px

#mc-embedded-subscribe
    background-color hex-teal
    color #fff
    padding 0
    border 1px solid hex-dk-teal

#close-panel-updates
    color #fff
    width 100%
    font-size 36px
    line-height 36px
    text-align right
    margin-top 15px
    cursor pointer

// Extra Small devices (up to 479px)
@media (max-width: 479px)
    
    // Panel Get Updates
    #panel-updates
        top -180px
        visibility hidden
        -webkit-transition none
        -moz-transition none
        -o-transition none
        transition none

    #panel-updates-h1
        margin-top 30px
        color hex-dk-teal

    #mc-embedded-subscribe
        margin-top 15px
