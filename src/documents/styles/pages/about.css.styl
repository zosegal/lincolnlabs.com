---
referencesOthers: true
---

@import '../_global'
@import '../_panel'
@import '../_navbar'
@import '../_footer'

#wrapper-about-content
    width 100%
    background-color #e2e2e2
    float left
    margin-top 240px

#container-about-content
    background-color #fff
    min-height 1000px
    margin-top -120px

#wrapper-about-content 

    p
        color hex-dk-teal
        font-size 16px
        font-weight 300

    h3
        color hex-teal
        margin-top 60px

.character
    background-color #fff
    border-bottom 1px solid #f1f1f1
    box-sizing border-box
    overflow hidden
    padding 60px 60px 100px 60px

    .left
        display inline-block
        height 146px
        margin-right 53px
        vertical-align top
        width 146px

    .right
        display inline-block
        max-width 800px

.character-text
    font-size 16px

.character-img,
.character-img img
    display block
    margin 0 auto

    h3
        font-family 'Helvetica Neue', Helvetica, sans-serif
        font-size 24px
        font-weight 700
        margin-bottom 34px

    p
        color hex-dk-teal
        font-weight 300
        font-size 18px
        line-height 24px

    p.first
        font-weight 500

@media (max-width: 568px)

    .character

        .left
            margin 0 0 20px 20px

        h3
            margin-bottom 12px
